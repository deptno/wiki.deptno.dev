{
  "compilerOptions": {
    "composite": true,
    "incremental": true,

    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

    "target": "es2022",
    "moduleResolution": "node",
    "module": "es2022",
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "dist/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
